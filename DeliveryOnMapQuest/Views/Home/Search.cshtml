@{
    ViewBag.Title = "Search Result";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<style>
  .black_overlay {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.8;
  opacity: .80;
  filter: alpha(opacity=80);
}
.white_content {
  display: none;
  position: absolute;
  top: 25%;
  left: 25%;
  width: 50%;
  height: 60%;
  padding: 1px;
  border: 1px solid black;
  background-color: white;
  z-index: 1002;
  overflow: auto;
  overflow:hidden;
}
</style>

<script>
    function OpenPopup(url) {
        $("#popUp").html("<a href=\"javascript:void(0)\" onclick=\"javascript:ClosePopup()\">Close</a><br/><img src='" + url + "'>");
        $('#popUp').show();
        $('#popUpBorder').show();
    }

    function ClosePopup() {
        $("#popUp").html("");
        $('#popUp').hide();
        $('#popUpBorder').hide();
    }

</script>

<table cellpadding="10">
    <tr>
        <td valign="top">
            <img src="@ViewBag.ResultUrl" />
        </td>
        <td valign="top">
            @Html.Raw(ViewBag.ResultHtml)
        </td>
    </tr>
</table>

<div id="popUp" class="white_content">
</div>
<div id="popUpBorder" class="black_overlay"></div>
